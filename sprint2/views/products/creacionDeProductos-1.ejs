<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body class="creation-product-body">

    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <div class="creation-product-form-container">
        <article>

            <form action="/crear/create2" method="post" class="creation-product-form">
    
                <label for="">Nombre del evento</label>
                <input type="text" id="name" name="name"> 
                
                <label for="">Fecha</label>
                <input type="date" id="time" name="time"> 

                <label for="">Hora</label>
                <input type="datetime" id="hour" name="hour"> 
        
                <label for="">Lugar</label>
                <input type="text" id="place" name="place"> 

                <label for="">Detalles</label>
                <input type="text" id="description" name="description"> 
    
                <div class="buttons-container">
                    <button class="cancel" type="reset">Cancelar</button>
                    <button class="accept" type="submit">Aceptar</button>
                </div>

            </form>
        </article>
    </div>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>